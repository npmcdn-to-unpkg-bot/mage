#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('mage:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 *  Socket.IO events
 */
var ko = require('knockout');

var sockets = [];

var io = require('socket.io')(server);
io.sockets.on('connection', function (socket) {
    
    var clientId = '/#' + socket.client.id;
    
    socket.on('fc-enviar-mensagem', function(mensagem) {
       socket.broadcast.to(socket.idDestino).emit('fs-enviar-mensagem', mensagem); 
    });
    
    socket.on('fc-exibir-carta', function(cartaSelecionada) {
       io.to(clientId).emit('fs-exibir-carta', cartaSelecionada); 
    });
    
    socket.on('fc-remover-carta', function(cartaSelecionada) {
       io.to(clientId).emit('fs-remover-carta', cartaSelecionada);
    });
    
    socket.on('fc-criar-sessao-espiritual', function(nomeBruxo) {
       socket.nome = nomeBruxo; 
    });
    
    socket.on('fc-atualizar-observacao-final', function(novoValor) {
        io.to(clientId).emit('fs-atualizar-observacao-final', novoValor)
    });
    
    socket.on('fc-iniciar-consulta', function(data) {
        var idSocketBruxo = '/#'+data.idBruxo;
        io.sockets.connected[idSocketBruxo].idDestino = clientId;
        socket.idDestino = idSocketBruxo;
        socket.join(idSocketBruxo);
        io.to(idSocketBruxo).emit('fs-iniciar-consulta', { nome: data.paciente, quantidadeDeCartasSelecionada: data.quantidadeDeCartasSelecionada });
        io.to(clientId).emit('fs-nome-bruxo', io.sockets.connected[idSocketBruxo].nome);
    });
    
    socket.on('disconnect', function(status) {
       if(socket.idDestino) {
           socket.broadcast.to(socket.idDestino).emit('fs-encerrar-sessao');
       }
    });
});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
