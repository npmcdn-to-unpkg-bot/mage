extends ../layout

block content
    .panel.panel-default.col-md-4.col-md-offset-4
        .panel-body
            div.img-responsive.center-block.img-circle.logo(style='background-image: url("/images/logo2.png")')
            h1(data-bind='text: titulo')
            form(action='#', method='post')        
                .form-group
                    input.form-control(data-bind='value: nome, valueUpdate: "afterkeydown"', name='nome', type='text', placeholder='Digite seu nome')
                .form-group
                    input.form-control(data-bind='value: sala, valueUpdate: "afterkeydown"', name='sala', type='text', placeholder='Digite o identificador do bruxo')
                input.btn.btn-primary(type='button', value='Entrar na Sala', data-bind='click: entrarNaSala')
    script(src='/javascripts/entrarSalaViewModel.js')