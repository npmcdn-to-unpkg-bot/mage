extends layout

block content
    .col-md-4.col-md-offset-4
        
        div.img-responsive.center-block.img-circle.logo(style='background-image: url("/images/logo.png")')
        
        h1 login
        
        if(status != '')
            h4= status  
    
        form(action='login', method='post')        
            .form-group
                input.form-control(name='login', type='text', placeholder='Login', value=login, required)
            .form-group
                input.form-control(name='senha', type='password', placeholder='Senha', value=senha, required)    
            input.btn.btn-primary(type='submit', value='Autenticar')
    
    style(type='text/css'). 
        .logo {
            width: 100px;
            height: 100px;
            box-shadow: 0 0 10px #ff6666;
            background-position: 50% 50%;
            background-size: 126% 126%;
        }
        body { 
            background: linear-gradient(#fff, #ffcccc);
            background-repeat: no-repeat;
        } 
        body,html { 
            height: 100%; 
        }
    
    script(src='/javascripts/LoginViewModel.js')