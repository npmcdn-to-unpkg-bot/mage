extends layout

block content
    .col-md-4.col-md-offset-4
        
        div.img-responsive.center-block.img-circle.logo(style='background-image: url("/images/logo.png")')
        
        h1(data-bind='text: titulo')
        h4= status
        
        form(action='login', method='post')        
            .form-group
                input.form-control(data-bind='value: login, valueUpdate: "afterkeydown"', name='login', type='text', placeholder='Login')
            .form-group
                input.form-control(name='senha', type='password', placeholder='Senha')
            input.btn.btn-primary(type='submit', value='Autenticar')
            a.pull-right(href='cadastrar') Quero me cadastrar

    style(type='text/css'). 
        .logo {
            width: 80px;
            height: 80px;
            box-shadow: 0 0 10px #ff6666;
            background-position: 50% 50%;
            background-size: 126% 126%;
        }
        body { 
            background: linear-gradient(#fff, #ffcccc);
            background-repeat: no-repeat;
        } 
        body,html { 
            height: 100%; 
        }
    #result
    script(src='/javascripts/loginViewModel.js')