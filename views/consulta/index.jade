extends ../layout

block content

    div#primeiroPasso(data-bind='visible: primeiroPasso')
        .panel.panel-default.col-md-4.col-md-offset-4
            .panel-body
                div.img-responsive.center-block.img-circle.logo(style='background-image: url("/images/logo2.png")')
                h1(data-bind='text: titulo')
                form(action='#', method='post')        
                    .form-group
                        input.form-control(data-bind='value: nome, valueUpdate: "afterkeydown"', name='nome', type='text', placeholder='Digite seu nome')
                    .form-group
                        input.form-control(data-bind='value: idBruxo', name='idBruxo', type='text', placeholder='Digite o identificador do bruxo')
                    .form-group
                        select.form-control(data-bind='options: quantidadesDeCartas, optionsCaption: "Escolha uma quatidade de cartas", value: quantidadeDeCartasSelecionada')
                    input.btn.btn-primary(type='button', value='Iniciar consulta espiritual', data-bind='click: iniciarConsultaEspiritual')
                    
    div#segundoPasso(data-bind='visible: segundoPasso')
        .container-fluid
            .row
                div(style='width: 60%; float: left')
                    h3 Você está falando com 
                        span(data-bind='text: nomeBruxo')
                    h4(style='color: #cc0000') Será uma jogada de  
                        span(data-bind='text: quantidadeDeCartasSelecionada') 
                        span  cartas
                                
                    div(style='height: 400px; overflow: auto; display: block')
                        table
                            tr(data-bind='foreach: cartasSelecionadas')
                                td
                                    div#carta
                                        h4(align='center', data-bind='text: nome')
                                        img.center-block(data-bind='attr: { src: imagem }', width='120', height='200')
                                        div.descricao(data-bind='text: descricao')
                    
                    h3 Observação Final
                    textarea#observacaoFinal(readonly='false', data-bind='value: observacaoFinal')
                 
                        
        div(style='width: 20%; float: left')
            h3 Chat
            textarea()
            input
                            
    script(src='/javascripts/consultaViewModel.js')